{
  "name": "slip",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun --bun vite",
    "build": "bun run type-check && bun run build:vite",
    "build:vite": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "bun prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "bun prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "test:run": "NODE_OPTIONS=\"--max-old-space-size=8192\" vitest run",
    "validate": "bun run type-check && bun run lint && bun run test:run",
    "prepare": "husky"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.98.0",
    "bootstrap": "^5.3.8",
    "framer-motion": "^12.4.5",
    "lucide-react": "^0.475.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@tailwindcss/vite": "^4.0.7",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "supabase": "^2.76.15",
    "tailwindcss": "^4.0.7",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.1.1",
    "vitest": "^4.0.18"
  }
}
